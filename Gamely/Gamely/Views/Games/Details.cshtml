@model Gamely.Models.Game
@{
    ViewBag.Title = "Детали";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Жанр: @Model.GameGenre.Name</li>
    <li>Дата выхода: @Model.ReleaseDate.ToString("d")</li>
    <li>Дата добавления: @Model.DateAdded.ToString("d")</li>
    <li>В наличии: @Model.NumberInStock</li>
</ul>