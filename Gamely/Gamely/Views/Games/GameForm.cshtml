@model Gamely.ViewModels.GameFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (@Html.BeginForm("Save", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(g => g.Game.Name)
        @Html.TextBoxFor(g => g.Game.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Game.GameGenreId)
        @Html.DropDownListFor(g => g.Game.GameGenreId, new SelectList(Model.GameGenres, "Id", "Name"), "Выберите жанр", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.GameGenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Game.ReleaseDate)
        @Html.TextBoxFor(g => g.Game.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Game.NumberInStock)
        @Html.TextBoxFor(g => g.Game.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Game.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Game.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Сохранить</button>
}

